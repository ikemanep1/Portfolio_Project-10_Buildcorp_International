<div class="opening">
<h2>Volunteer: <%= @volunteer.name %></h2>
<h3>Project: <%= @volunteer.project.name %></h3>
</div>
<div class="form">
<form action="/projects/<%= @volunteer.project.id %>/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="name">Rename!</label>
  <input id="name" name="name" type="text">
  <button type="submit">Rename!</button>
</form>
</div>
<div class="form">
<form action="/projects/<%= @volunteer.project.id %>/volunteers/<%= @volunteer.id %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit">Delete!</button>
</form>
</div>
<div class="logic">
<a href="/projects/<%= @volunteer.project.id %>">Back to <%= @volunteer.project.name %></a>
</div>
